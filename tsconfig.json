{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": ".",
        "sourceMap": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es2019",
            "DOM"
        ],
        "allowJs": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "jsx": "react",
        "strict": false
    },
    "include": [
        "src/**/*",
        "src/server/**/*",
        "dist/template-data.json",
    ]
}